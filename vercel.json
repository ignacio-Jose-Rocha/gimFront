{
  "buildCommand": "npm run vercel-build",
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    },
    "api/keep-alive.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/keep-alive",
      "schedule": "0 */6 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
